{
    "manifest_version": 2,

    "name": "MOABB",
    "description": "This extension allows the user to use the back button through redirect pages",
    "version": "1.0",

    "permissions": [
        "webNavigation",
        "browsingData",
        "tabs",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": ["http://*.reddit.com/*", "https://*.reddit.com/*"],
            "js": ["jquery-3.3.1.min.js", "content-common.js", "content.js"]
        },
        {
            "matches": ["http://*.reddit.com/*", "https://*.reddit.com/*"],
            "js": ["jquery-3.3.1.min.js", "content-common.js", "reddit.js"]
        }
    ]
}
